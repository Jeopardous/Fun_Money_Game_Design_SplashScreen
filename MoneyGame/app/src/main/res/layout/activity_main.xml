<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="90">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/gray_border_bottom">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="90">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/player1_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="15"
                            android:background="@drawable/black_border"
                            android:gravity="center"
                            android:text="Player 1" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/player1_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="35" />

                        <EditText
                            android:id="@+id/player1_enter_no"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="10"
                            android:background="@drawable/black_border"
                            android:ems="8"
                            android:gravity="center"
                            android:hint="Enter your No"
                            android:inputType="number" />

                        <Button
                            android:id="@+id/player1_ready_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="12"
                            android:background="@drawable/white_rounded_button"
                            android:text="READY" />

                        <TextView
                            android:id="@+id/player1_entered_no"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="12"
                            android:background="@drawable/black_border"
                            android:gravity="center"
                            android:text="You Entered" />

                        <TextView
                            android:id="@+id/player1_final_score"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="16"
                            android:background="@drawable/black_border"
                            android:gravity="center"
                            android:text="x-y=z" />


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20">

                    <TextView
                        android:id="@+id/battle_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_border"
                        android:gravity="center"
                        android:text="Battle Starts" />

                    <TextView
                        android:id="@+id/battle_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/battle_start"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="10 sec" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="Random No" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/player2_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="15"
                            android:background="@drawable/black_border"
                            android:gravity="center"
                            android:text="Player 2" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/player2_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="35" />

                        <EditText
                            android:id="@+id/player2_enter_no"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="10"
                            android:background="@drawable/black_border"
                            android:ems="8"
                            android:gravity="center"
                            android:hint="Enter Your No"
                            android:inputType="number" />

                        <Button
                            android:id="@+id/player2_ready_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="12"
                            android:background="@drawable/white_rounded_button"
                            android:text="READY" />

                        <TextView
                            android:id="@+id/player2_entered_no"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="12"
                            android:background="@drawable/black_border"
                            android:gravity="center"
                            android:text="You Entered" />

                        <TextView
                            android:id="@+id/player2_final_score"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="16"
                            android:background="@drawable/black_border"
                            android:gravity="center"
                            android:text="x-y=z" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:background="@drawable/gray_border_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:text="Congratulations"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="75"
                    android:background="@drawable/gray_border_bottom"
                    android:gravity="center"
                    android:text="Player X"
                    android:textSize="25dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>